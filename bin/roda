#!/usr/bin/env ruby
# encoding: utf-8

ENV['RACK_ENV'] ||= 'development'

if ARGV.empty?
  puts "usage: roda server"
  exit
end

require "clap"
$LOAD_PATH << File.expand_path(File.join(File.dirname(__FILE__), "../lib"))
require 'roda/bin'

Clap.run ARGV,
  "server" => -> { Roda::BIN.server },
  "s"      => -> { Roda::BIN.server }
